<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewQuery"
        android:layout_width="365dp"
        android:layout_height="42dp"
        android:text="Έυρεση άρθρων βάσει κατηγορίας"
        android:textColor="@color/Salmon"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/QInsertCat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="insert_category_id"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewQuery" />

    <Button
        android:id="@+id/buttonQCat"
        android:layout_width="125dp"
        android:layout_height="54dp"
        android:layout_marginTop="148dp"
        android:text="Εύρεση"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="365dp"
        android:layout_height="42dp"
        android:layout_marginTop="140dp"
        android:text="Μέτρηση ερωτήσεων ανά κατηγορία"
        android:textColor="@color/Salmon"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QInsertCat" />

    <Button
        android:id="@+id/buttonQCount"
        android:layout_width="125dp"
        android:layout_height="54dp"
        android:layout_marginTop="336dp"
        android:layout_marginEnd="4dp"
        android:text="Μέτρηση"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="365dp"
        android:layout_height="42dp"
        android:layout_marginTop="432dp"
        android:gravity="center"
        android:text="Εύρεση ερωτήσεων βάσει κειμένου "
        android:textColor="@color/Salmon"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/QInsertΤext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Insert Text"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/buttonQText"

        android:layout_width="125dp"
        android:layout_height="54dp"
        android:layout_marginTop="588dp"
        android:layout_marginEnd="4dp"
        android:text="Εύρεση"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>




