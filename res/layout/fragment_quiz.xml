<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonQ1"
        android:layout_width="318dp"
        android:layout_height="95dp"
        android:layout_marginBottom="252dp"
        android:text="Σωστό"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView5" />

    <Button
        android:id="@+id/buttonQ2"
        android:layout_width="318dp"
        android:layout_height="95dp"
        android:layout_marginBottom="136dp"
        android:text="Λάθος"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonQ1"
        app:layout_constraintVertical_bias="0.696" />

    <Button
        android:id="@+id/buttonQ3"
        android:layout_width="169dp"
        android:layout_height="85dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="16dp"
        android:text="Επόμενη Ερώτηση"
        android:textSize="20sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="360dp"
        android:layout_height="286dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="30sp" />
    </ScrollView>

    <Button
        android:id="@+id/buttonQ4"
        android:layout_width="166dp"
        android:layout_height="123dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="24dp"
        android:text="Επιστροφή στο Αρχικό Μενού"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>